program zad_C;

{$APPTYPE CONSOLE}

uses
  SysUtils;
var
  st, st1 : string;
  n, i, j, p, k: integer;
begin
  readln(n, p);
  readln(st);

  st := '0`' + st;
  st1 := st;

  n := n + 2;
  for i := n downto 3 do begin
    while(st1[i] < chr(96 + p)) do begin
      inc(st1[i]);
      if(st1[i] <> st1[i - 1]) and (st1[i] <> st1[i - 2]) then begin
        k := i;
        if(st1[i - 1] = 'a') then begin
          st1[i + 1] := 'b';
          inc(k);
        end;

        for j := 1 to n - k do
          if(j mod 3 = 1) then
            st1[j + k] := 'a'
          else if (j mod 3 = 2) then
            st1[j + k] := 'b'
          else
            st1[j + k] := 'c';
         writeln(copy(st1, 3, n));

         readln(n);
         exit;
      end;
    end;
    st1[i] := st[i];
  end;

  writeln('NO');
  readln(n);
end.

program ZAD_C_2;

{$APPTYPE CONSOLE}

uses
  SysUtils,
  Math;

var
   i, j, u, r, g, b, rr, gg, bb, max1, max2, max3, max4, m1, m2, q, n, m :int64;

begin
    readln(r, g, b);

    rr := r;
    gg := g;
    bb := b;

    max4 := min(min(r, g), b);

    n := 0;
    m := 0;
    rr := rr - max4;
    bb := bb - max4;
    gg := gg - max4;
    if (gg <> 0) then
    begin
        n := gg;
        if (rr <> 0) then
            m := rr
        else
            m := bb;
    end
    else
    begin
        n := rr;
        m := bb;
    end;

    {---nm---}
    q := n - (m div 2);
    m1 := min (m div 2, n);
    if (m mod 2 <> 0) and (q >= 2)  then
        inc(m1);

    q := m - (n div 2);
    m2 := min (n div 2, m);
    if (n mod 2 <> 0) and (q >= 2) then
        inc(m2);

    max4 := max4 + max(m1, m2);


    writeln(max4);

    readln;
    readln;
end.
